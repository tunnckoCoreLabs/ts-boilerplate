{
  /* Only generating type (`.d.ts`) files */
  "include": ["../src"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "module": "es2015",
    "declaration": true,
    "declarationDir": "../dist",
    "emitDeclarationOnly": true
  }
}
